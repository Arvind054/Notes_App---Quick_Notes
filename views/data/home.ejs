
<% layout("layouts/boilerplate") %>
    <div class="new">
        <a href="/home/new"><i class="fa-solid fa-plus"></i></a>

    </div>
    <% if (noteData.length==0) { %>
       <div class="row">
          
           <div class="col-lg-4 col-md-6 col-sm-8 mb-3 offset-lg-4 offset-md-3 offset-sm-2 hidden_text">
            <i class="fa-regular fa-lightbulb"></i>
              <p>Notes You Add Appear Here</p>
           </div>
       </div>
    <% } %>
        <div class=" row " id="display-notes">
        <% noteData.reverse().forEach(note=> { %>
            <div class="col-lg-4  col-md-6 col-sm-12 mb-5">
                <a href="/home/note/<%= note._id %>" class="single-note-link">
                <div class="mb-3 offset-3" id="single-note">
                    <h3>
                        <%= note.title %>
                    </h3>
                    <p>
                        <%= note.note.slice(0,40)%>...
                    </p>
                    <form action="/home/<%= note._id %>/?_method=DELETE" method="post">
                        <i class="noteDate">
                            <%= note.date %>
                        </i>
                        <button class="btn trash-btn" method="delete" href="/home"><i class="fa-solid fa-trash"
                                style="color: #cfc9c9;"></i></button>

                    </form>
                </div>
            </a>
            </div>
            <% }) %>
    </div>
   